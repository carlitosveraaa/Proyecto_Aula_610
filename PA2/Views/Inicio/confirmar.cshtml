
@{
    Layout = null;
}
<link rel="stylesheet" href="~/css/Confirmar.css" />


<!DOCTYPE html>

<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css">
    <title>confirmar</title>
    <link rel="stylesheet" href="~/css/site.css" />
    <!-- tipo de letra de google fonts titulo -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Cinzel:wght@400..900&display=swap" rel="stylesheet">
    <!-- tipo de letra de google fonts body-->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=ABeeZee:ital@0;1&family=Cinzel:wght@400..900&display=swap" rel="stylesheet">
</head>
<body>
    <div class="container mt-3">
        @if((bool)ViewBag.respuesta)
        {
            <div class=" alert alert-success justify-content-center">
                <p><b>!Listo¡</b>&nbsp; Su cuenta fue confirmada. Ahora puede acceder.</p>
                <a class="btn btn-link" href="@Url.Action("Login","Inicio")">Ingresar</a>
            </div>
        }
        else
        {
            <div class=" alert alert-danger justify-content-center">
                <p>No fue posible confirmar el correo</p>
            </div>
            
        }

    </div>
    <script src="~/bundles/bootstrap"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
            crossorigin="anonymous"></script>
</body>
</html>
