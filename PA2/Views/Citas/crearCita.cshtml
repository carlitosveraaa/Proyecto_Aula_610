@{
    Layout = null;
}
<link href="~/css/empleados/empleados.css" rel="stylesheet" />
<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css">
    <title>Reservar Cita</title>
    <link rel="stylesheet" href="~/Content/css">
    <!-- Tipos de letra de Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Cinzel:wght@400..900&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=ABeeZee:ital@0;1&family=Cinzel:wght@400..900&display=swap" rel="stylesheet">

    <style>
        .container a {
            color: #ffffff;
        }

        body {
            background-color: #ffffff;
            padding: 90px;
            font-family: "Cinzel", serif;
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .input-group {
            margin-bottom: 20px;
        }

            .input-group input{
                width: 100%;
                padding: 15px;
                border-radius: 25px;
                margin-bottom: 10px;
                background-color: #B5DAE8;
                border: 2px solid #B5DAE8;
                color: #000000;
                outline: none;
                font-family: Arial, Helvetica, sans-serif;
            }

            
            .input-group select{
                width: 110%;
                padding: 15px;
                border-radius: 25px;
                margin-bottom: 10px;
                background-color: #B5DAE8;
                border: 2px solid #B5DAE8;
                color: #000000;
                font-family: Arial, Helvetica, sans-serif;

            }

            .input-group label {
                display: flex;
                color: #0067AA;
                font-size: 15px;
                font-weight: 600;
                margin-bottom: 10px;
                margin-right: 20px;
            }

            .input-group input::placeholder {
                color: #000000;
            }

        .btn {
            font-size: 16px;
            color: #000000;
            border-radius: 10px;
            background-color: #B5DAE8;
            cursor: pointer;
            border-color: #B5DAE8;
        }

        .btn:hover {
            font-size: 16px;
            color: #ffffff;
                border-radius: 10px;
                background-color: #6faacf;
            cursor: pointer;
                border-color: #6faacf;
        }

        .btn:active {
            font-size: 16px;
            color: #ffffff;
                border-radius: 10px;
            background-color: #6faacf;
            cursor: pointer;
            border-color: #6faacf;
        }

    </style>
</head>
<body>
    <div class="container">
        <div class="row justify-content-center mt-5">
            <div class="col-5">
                <div class="justify-content-center">
                    @if (ViewBag.Reservado == null)
                    {
                        <form action="/Citas/crearCita" method="post">
                            <h2 class="text-center">Reservar Cita</h2>
                            <br />
                            <div class="input-group justify-content-center">
                                <div class="mb-3">
                                    <label for="nombre">Nombre</label>
                                    <input type="text" class="form-control" id="nombre" name="nombre" placeholder="Nombre" value="@(ViewBag.Nombre ?? "")" required />
                                </div>

                                <div class="mb-3">
                                    <label for="apellido">Apellido</label>
                                    <input type="text" class="form-control" id="apellido" name="apellido" placeholder="Apellido" value="@(ViewBag.Apellido ?? "")" required />
                                </div>

                                <div class="mb-3">
                                    <label for="fecha">Día</label>
                                    <input type="date" class="form-control" id="fecha" name="fecha" min="@DateTime.Now.ToString("yyyy-MM-dd")" required />
                                </div>

                                <div class="mb-3">
                                    <label for="hora">Hora</label>
                                    <select class="form-select" id="hora" name="hora" required>
                                        <option value="">Selecciona una hora</option>
                                        <option value="09:00">09:00 AM</option>
                                        <option value="10:00">10:00 AM</option>
                                        <option value="11:00">11:00 AM</option>
                                        <option value="12:00">12:00 PM</option>
                                        <option value="13:00">01:00 PM</option>
                                        <option value="14:00">02:00 PM</option>
                                        <option value="15:00">03:00 PM</option>
                                        <option value="16:00">04:00 PM</option>
                                        <option value="17:00">05:00 PM</option>
                                    </select>
                                </div>
                            </div>

                            @if (ViewBag.Mensaje != null)
                            {
                                <div class="alert alert-danger text-center">
                                    <p>@ViewBag.Mensaje</p>
                                </div>
                            }

                            <div class="mb-3">
                                <div class="d-grid">
                                    <input class="btn" type="submit" value="Reservar cita"><br />
                                    <button type="button" class="btn" href="@Url.Action("Index", "Home")">Volver</button>
                                </div>
                            </div>
                        </form>
                    }
                    else
                    {
                        <div class="alert alert-success text-center">
                            <p>@ViewBag.Mensaje</p>
                            <a class="btn btn-success" href="@Url.Action("Index", "Home")">Volver</a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
            crossorigin="anonymous"></script>
</body>
</html>