@{
    Layout = null;
}
<link rel="stylesheet" href="~/css/Login.css" />

<!DOCTYPE html>

<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css">
    <title>Login</title>
    <link rel="stylesheet" href="~/Content/css">
    <!-- tipo de letra de google fonts titulo -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Cinzel:wght@400..900&display=swap" rel="stylesheet">
    <!-- tipo de letra de google fonts body-->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=ABeeZee:ital@0;1&family=Cinzel:wght@400..900&display=swap" rel="stylesheet">

    <style>
        .container a {
            color: #ffffff;
        }

        body {
            background-color: #ffffff;
            padding: 90px;
            font-family: "Cinzel", serif;
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .input-group {
            margin-bottom: 20px;
        }

            .input-group input {
                width: 100%;
                padding: 15px;
                border-radius: 25px;
                margin-bottom: 10px;
                background-color: #B5DAE8;
                border: 2px solid #B5DAE8;
                color: #000000;
                outline: none;
                font-family: Arial, Helvetica, sans-serif;
            }


            .input-group select {
                width: 110%;
                padding: 15px;
                border-radius: 25px;
                margin-bottom: 10px;
                background-color: #B5DAE8;
                border: 2px solid #B5DAE8;
                color: #000000;
                font-family: Arial, Helvetica, sans-serif;
            }

            .input-group label {
                display: flex;
                color: #0067AA;
                font-size: 15px;
                font-weight: 600;
                margin-bottom: 10px;
                margin-right: 20px;
            }

            .input-group input::placeholder {
                color: #000000;
            }

        .btn, input[type="submit"] {
            font-size: 16px;
            color: #000000;
            border-radius: 10px;
            background-color: #B5DAE8;
            cursor: pointer;
            border-color: #B5DAE8;
            text-decoration: none;
        }

            .btn:hover, input[type="submit"]:hover {
                font-size: 16px;
                color: #ffffff;
                border-radius: 10px;
                background-color: #6faacf;
                cursor: pointer;
                border-color: #6faacf;
                text-decoration: none;
            }

            .btn:active, input[type="submit"]:active {
                font-size: 16px;
                color: #ffffff;
                border-radius: 10px;
                background-color: #6faacf;
                cursor: pointer;
                border-color: #6faacf;
                text-decoration: none;
            }

    </style>
</head>
<body>
    <div class="row justify-content-center mt-5">
        <div class="col-9">
            <div class="justify-content-center">

                <form method="post" action="/Empleado/Login_empleados">
                    <h2 style="text-align: center;">Iniciar Sesión</h2>
                    <br />

                    <div class="input-group justify-content-center">
                        <div class="mb-3 mr-3">
                            <label>Código de empleado</label>
                            <input type="password" class="form-control" name="cdempleado" placeholder="Codigo de empleado" required>
                        </div>

                        <div class="mb-3">
                            <label>Contraseña</label>
                            <input type="password" class="form-control" name="clave" placeholder="Contraseña" required>
                        </div>
                        
                    </div>

                    <div class="mb-3">
                        <div class="d-grid">
                            <input class="btn btn-outline-secondary" type="submit" value="Iniciar Sesión"> <br />
                            @if (ViewBag.Mensaje != null)
                            {
                                <br />
                                <div class="alert alert-danger">
                                    @ViewBag.Mensaje
                                </div>
                                <br />
                            }
                            <a class="btn btn-link" href="@Url.Action("Login","Inicio")">Volver</a>
                        </div>
                    </div>
                </form>

            </div>
        </div>
    </div>

    <script src="~/bundles/bootstrap"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
            crossorigin="anonymous"></script>
</body>
</html>
