}

    .galeria figure {
        position: relative;
        height: 300px;
        width: 500px;
        overflow: hidden;
        border-radius: 6px;
    }

        .galeria figure img {
            border: 0;
            border-radius: 25px;
            width: 100%;
            height: 100%;
            flex-grow: 1;
            object-fit: cover;
            padding: 0 1px;
            opacity: 1;
            transition: all 500ms ease-out;
        }

        .galeria figure .capa {
            position: absolute;
            top: 0;
            width: 100%;
            height: 100%;
            background: #0d6fb16e;
            transition: all 500ms ease-out;
            opacity: 0;
            visibility: hidden;
            text-align: center;
        }

        .galeria figure:hover > .capa {
            opacity: 1;
            visibility: visible;
        }

        .galeria figure:hover > img {
            transform: scale(1.3);
            border: 0;
            border-radius: 25px;
        }

        .galeria figure:hover > .capa h3 {
            margin-top: 70px;
            margin-bottom: 15px;
        }

        .galeria figure .capa h3 {
            color: #ffffff;
            font-weight: 400;
            margin-bottom: 120px;
            transition: all 500ms ease-out;
            margin-top: 30px;
        }

        .galeria figure .capa p {
            color: #ffffff;
            font-size: 15px;
            line-height: 1.5;
            width: 100%;
            max-width: 220px;
            margin: auto;
            transition: all 500ms ease-out;
            margin-top: 30px;
        }

        .galeria figure .capa a {
            color: #ffffff;
            align-content: center;
            font-size: 15px;
            line-height: 1.5;
            width: 100%;
            max-width: 220px;
            margin: auto;
            transition: all 500ms ease-out;
